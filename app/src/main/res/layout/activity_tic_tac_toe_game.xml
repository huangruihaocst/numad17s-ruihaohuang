<FrameLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context="ruihaohuang.madcourse.neu.edu.numad17s_ruihaohuang.tictactoe.GameActivity">

   <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:src="@drawable/tic_tac_toe_sandy_beach"/>

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical">

      <fragment
         android:id="@+id/fragment_game"
         class="ruihaohuang.madcourse.neu.edu.numad17s_ruihaohuang.tictactoe.GameFragment"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         tools:layout="@layout/fragment_tic_tac_toe_game"/>
      <!-- Control fragment goes here... -->

      <fragment
         android:id="@+id/fragment_game_controls"
         class="ruihaohuang.madcourse.neu.edu.numad17s_ruihaohuang.tictactoe.ControlFragment"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         tools:layout="@layout/fragment_tic_tac_toe_control"/>

   </LinearLayout>

   <include layout="@layout/tic_tac_toe_thinking"/>

</FrameLayout>
