<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/tile_background"
    android:elevation="@dimen/elevation_low"
    android:padding="@dimen/tile_padding"
    tools:context=".scroggle.ScroggleMainActivity">

    <Button
        android:id="@+id/scroggle_small_0"
        style="@style/ScroggleTileButton"
        android:layout_row="0"
        android:layout_column="0" />

    <Button
        android:id="@+id/scroggle_small_1"
        style="@style/ScroggleTileButton"
        android:layout_row="0"
        android:layout_column="1" />

    <Button
        android:id="@+id/scroggle_small_2"
        style="@style/ScroggleTileButton"
        android:layout_row="0"
        android:layout_column="2" />

    <Button
        android:id="@+id/scroggle_small_3"
        style="@style/ScroggleTileButton"
        android:layout_row="1"
        android:layout_column="0" />

    <Button
        android:id="@+id/scroggle_small_4"
        style="@style/ScroggleTileButton"
        android:layout_row="1"
        android:layout_column="1" />

    <Button
        android:id="@+id/scroggle_small_5"
        style="@style/ScroggleTileButton"
        android:layout_row="1"
        android:layout_column="2"/>

    <Button
        android:id="@+id/scroggle_small_6"
        style="@style/ScroggleTileButton"
        android:layout_row="2"
        android:layout_column="0"/>

    <Button
        android:id="@+id/scroggle_small_7"
        style="@style/ScroggleTileButton"
        android:layout_row="2"
        android:layout_column="1"/>

    <Button
        android:id="@+id/scroggle_small_8"
        style="@style/ScroggleTileButton"
        android:layout_row="2"
        android:layout_column="2"/>

</GridLayout>