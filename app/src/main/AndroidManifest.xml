<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ruihaohuang.madcourse.neu.edu.numad17s_ruihaohuang">
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".tictactoe.TicTacToeMainActivity"
            android:label="@string/title_activity_tic_tac_toe"
            android:theme="@style/TicTacToeTheme">
        </activity>
        <activity android:name=".tictactoe.GameActivity"
            android:label="@string/title_activity_game"
            android:theme="@style/TicTacToeTheme">
        </activity>
    </application>

</manifest>